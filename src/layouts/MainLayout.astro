---
// MainLayout.astro - Layout principal épuré pour Gastronomade
import '../styles/global.css';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import MicroInteractions from '../components/MicroInteractions.astro';
import { getContactData, getSiteSettingsData } from '../lib/sanity';

const [contactData, siteSettings] = await Promise.all([
  getContactData(),
  getSiteSettingsData()
]);

const defaultSiteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://gastronomade.netlify.app';
const siteUrl = siteSettings?.seo?.siteUrl || defaultSiteUrl;

const defaultTitle = siteSettings?.seo?.defaultTitle || 'Gastronomade - Manger Vrai';
const defaultDescription = siteSettings?.seo?.defaultDescription || "Gastronomade - Manger Vrai - Muriel Cruysmans à Wavre";
const defaultImage = siteSettings?.seo?.shareImageUrl || "/images/logo-manger-vrai.png";

const {
  title = defaultTitle,
  description = defaultDescription,
  image = defaultImage,
  url = Astro.url.pathname,
  robots = 'index,follow',
  jsonLd = [],
  enableMicroInteractions = true
} = Astro.props;

const canonicalUrl = `${siteUrl}${url}`;
const resolvedImage = image.startsWith('http') ? image : `${siteUrl}${image}`;

const fallbackNavItems = [
  { label: 'Gastronomade', href: '/' },
  { label: 'Thermomix', href: '/thermomix' },
  { label: 'Cours & Coaching', href: '/about' },
  { label: 'Recettes', href: '/recettes' },
  { label: 'Contact', href: '/contact' }
];

const navigationItems = (siteSettings?.navigation && siteSettings.navigation.length > 0
  ? siteSettings.navigation
  : fallbackNavItems
).filter((item) => item?.isVisible !== false);

const showNavigation = siteSettings?.showNavigation !== false;
const showFooter = siteSettings?.showFooter !== false;
const showNewsletter = siteSettings?.showNewsletter !== false;

const footerTitle = siteSettings?.footer?.brandTitle || 'Gastronomade';
const footerSubtitle = siteSettings?.footer?.brandSubtitle || 'Manger Vrai avec Muriel Cruysmans · Wavre';

const phone = siteSettings?.footer?.contact?.phone || contactData?.contactInfo?.phone || '+32 478 44 40 65';
const email = siteSettings?.footer?.contact?.email || contactData?.contactInfo?.email || 'muriel.cruysmans@gmail.com';

const privacyPolicyUrl = '/Privacy Policy - Muriel Cruysmans.docx';
const privacyPolicyHref = encodeURI(privacyPolicyUrl);

const socialLinks = (siteSettings?.footer?.socialLinks && siteSettings.footer.socialLinks.length > 0
  ? siteSettings.footer.socialLinks
  : [
      {
        platform: 'Instagram',
        url: 'https://www.instagram.com/manger_vrai',
        label: '@manger_vrai',
        isVisible: true
      },
      {
        platform: 'YouTube',
        url: 'https://www.youtube.com/@murielcruysmans5423/shorts',
        label: 'YouTube',
        isVisible: true
      }
    ]
).filter((link) => link?.isVisible !== false && link?.url);

const address = siteSettings?.address;
const copyrightText = (siteSettings?.footer?.copyrightText || '© {year} Gastronomade - Manger Vrai. Tous droits réservés.')
  .replace('{year}', String(new Date().getFullYear()));

const searchTarget = `${siteUrl}/recettes?search={search_term_string}`;
const socialSameAs = socialLinks.map((link) => link.url).filter(Boolean);
const extraJsonLd = Array.isArray(jsonLd) ? jsonLd : [jsonLd];

const localBusinessJsonLd = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": footerTitle,
  "description": defaultDescription,
  "url": siteUrl,
  "telephone": phone,
  "address": {
    "@type": "PostalAddress",
    "streetAddress": address?.street || "Adresse de Wavre",
    "addressLocality": address?.city || "Wavre",
    "addressRegion": address?.region || "Brabant wallon",
    "postalCode": address?.postalCode || "1300",
    "addressCountry": address?.country || "BE"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 50.717,
    "longitude": 4.611
  },
  "openingHours": "Mo-Fr 09:00-18:00",
  "priceRange": "$$",
  "servesCuisine": ["Healthy", "French", "Belgian"],
  "founder": {
    "@type": "Person",
    "name": "Muriel Cruysmans"
  }
};

const organizationJsonLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": footerTitle,
  "url": siteUrl,
  "logo": resolvedImage,
  "sameAs": socialSameAs.length > 0 ? socialSameAs : undefined,
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": phone,
    "email": email,
    "contactType": "customer service"
  }
};

const personJsonLd = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Muriel Cruysmans",
  "url": siteUrl,
  "sameAs": socialSameAs.length > 0 ? socialSameAs : undefined
};

const websiteJsonLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  "name": footerTitle,
  "url": siteUrl,
  "potentialAction": {
    "@type": "SearchAction",
    "target": searchTarget,
    "query-input": "required name=search_term_string"
  }
};

const jsonLdObjects = [
  localBusinessJsonLd,
  organizationJsonLd,
  personJsonLd,
  websiteJsonLd,
  ...extraJsonLd
].filter(Boolean);
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content={description} />
  <meta name="robots" content={robots} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script>/* Set class early to avoid FOUT: hide animated elements immediately when JS is enabled */
    try {
      if (!(window.matchMedia && window.matchMedia('(prefers-reduced-motion: reduce)').matches)) {
        document.documentElement.classList.add('has-js');
      }
    } catch (e) { /* ignore */ }
  </script>
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Lora:ital,wght@0,400;0,600;1,400&family=Inter:wght@300;400;500;600;700&display=swap" />
  <link rel="icon" type="image/png" href="/images/logo-manger-vrai.png" />
  <link rel="apple-touch-icon" href="/images/logo-manger-vrai.png" />
  <link rel="canonical" href={canonicalUrl} />
  <title>{title}</title>

  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={resolvedImage} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:type" content="website" />
  <meta property="og:locale" content="fr_FR" />
  <meta property="og:site_name" content={footerTitle} />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={resolvedImage} />

  <!-- Structured Data (JSON-LD) -->
  {jsonLdObjects.map((item) => (
    <script type="application/ld+json" set:html={JSON.stringify(item)} />
  ))}
</head>
<body class="bg-mv-cream font-sans text-mv-forest min-h-screen">
  <a href="#main-content" class="skip-link">Aller au contenu</a>
  <!-- Navigation -->
  <nav class="bg-mv-cream-80 backdrop-blur-md border-b border-mv-leaf-30 sticky top-0 z-50 shadow-lg shadow-mv-forest-5">
    <div class="mv-container">
      <div class="flex justify-between items-center h-16">
        <div class="flex-shrink-0">
          <a href="/" class="text-xl md:text-2xl font-serif font-bold text-mv-forest hover:text-mv-leaf transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-mv-leaf focus:ring-offset-2 rounded">
            {footerTitle}
          </a>
        </div>

        <!-- Desktop Navigation -->
        {showNavigation && (
          <div class="hidden md:block">
            <div class="ml-10 flex items-baseline space-x-1 lg:space-x-8">
              {navigationItems.map((item) => (
                <a href={item.href} class="text-mv-forest hover:text-mv-leaf hover:bg-mv-leaf-10 px-3 py-2 text-sm font-medium transition-all duration-300 rounded focus:outline-none focus:ring-2 focus:ring-mv-leaf focus:ring-offset-2">
                  {item.label}
                </a>
              ))}
            </div>
          </div>
        )}

        <!-- Mobile menu button -->
        <div class="md:hidden">
          <button
            type="button"
            id="mobile-menu-button"
            class="text-mv-forest hover:text-mv-leaf hover:bg-mv-leaf-10 p-2 transition-all duration-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-mv-leaf focus:ring-offset-2"
            aria-label="Ouvrir le menu"
            aria-expanded="false"
            aria-controls="mobile-menu"
          >
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Navigation Menu -->
      {showNavigation && (
        <div id="mobile-menu" class="hidden md:hidden pb-4">
          <div class="px-2 pt-2 pb-3 space-y-1 bg-mv-cream-90 backdrop-blur-lg rounded-lg border border-mv-leaf-30 mt-2 shadow-xl shadow-mv-forest-10">
            {navigationItems.map((item) => (
              <a href={item.href} class="text-mv-forest hover:text-mv-leaf hover:bg-mv-leaf-10 block px-3 py-2 text-base font-medium transition-all duration-300 rounded focus:outline-none focus:ring-2 focus:ring-mv-leaf focus:ring-offset-2">
                {item.label}
              </a>
            ))}
          </div>
        </div>
      )}
    </div>
  </nav>

  <!-- Main content -->
  <main id="main-content" class="flex-1 min-h-screen">
    <slot />
  </main>

  <!-- Newsletter Signup -->
  {showNewsletter && (
    <section class="mv-section-tight">
      <div class="mv-container">
        <NewsletterSignup />
      </div>
    </section>
  )}

  <!-- Footer -->
  {showFooter && (
    <footer class="bg-mv-cream border-t border-mv-leaf-20 mt-10">
    <div class="mv-container py-5 md:py-6">
      <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
        <!-- Identité -->
        <div class="flex items-center gap-4">
          <div>
            <h3 class="text-base sm:text-lg font-serif font-bold text-mv-forest">{footerTitle}</h3>
            <p class="text-mv-forest-70 text-sm">
              {footerSubtitle}
            </p>
          </div>
        </div>

        <!-- Politique & confidentialité -->
        <div class="flex flex-col gap-1 text-sm text-mv-forest-80">
          <span class="text-xs uppercase tracking-wide text-mv-forest-60">Politique & confidentialité</span>
          <a
            href="/auteur"
            class="text-mv-forest-80 hover:text-mv-leaf transition-colors"
          >
            À propos de Muriel
          </a>
          <a
            href={privacyPolicyHref}
            download="Politique-et-confidentialite.docx"
            class="text-mv-forest-80 hover:text-mv-leaf transition-colors"
          >
            Télécharger la version complète
          </a>
        </div>

        <!-- Contact & réseaux -->
        <div class="flex flex-col gap-3 text-sm text-mv-forest-80">
          <div class="flex flex-col sm:flex-row sm:items-center gap-3">
            <a href={`tel:${phone.replace(/\s+/g, '')}`} class="flex items-center text-mv-forest-80 hover:text-mv-leaf transition-colors">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              {phone}
            </a>
            <a href={`mailto:${email}`} class="flex items-center text-mv-forest-80 hover:text-mv-leaf transition-colors">
              <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              {email}
            </a>
          </div>
          <div class="flex items-center gap-4 text-sm">
            {socialLinks.map((link) => (
              <a href={link.url} target="_blank" rel="noopener noreferrer" class="flex items-center text-mv-forest-80 hover:text-mv-leaf transition-colors">
                {link.platform === 'Instagram' && (
                  <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                )}
                {link.platform === 'YouTube' && (
                  <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M23.498 6.186a2.999 2.999 0 0 0-2.112-2.112C19.505 3.5 12 3.5 12 3.5s-7.505 0-9.386.574A2.999 2.999 0 0 0 .502 6.186C0 8.067 0 12 0 12s0 3.933.502 5.814a2.999 2.999 0 0 0 2.112 2.112C4.495 20.5 12 20.5 12 20.5s7.505 0 9.386-.574a2.999 2.999 0 0 0 2.112-2.112C24 15.933 24 12 24 12s0-3.933-.502-5.814zM9.75 15.5v-7l6 3.5-6 3.5z"/>
                  </svg>
                )}
                {link.label || link.platform}
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Copyright -->
      <div class="border-t border-mv-leaf-20 mt-6 pt-4 text-center">
        <p class="text-mv-forest-60 text-sm">
          {copyrightText}
        </p>
      </div>
    </div>
  </footer>
  )}

  {enableMicroInteractions && (
    <MicroInteractions
      enableHoverEffects={true}
      enableClickFeedback={true}
      enableScrollAnimations={true}
      enableLoadingAnimations={true}
    />
  )}

  <script>
    // Menu mobile functionality
    document.addEventListener('DOMContentLoaded', () => {
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      if (mobileMenuButton && mobileMenu) {
        const closeMobileMenu = () => {
          mobileMenu.classList.add('hidden');
          mobileMenuButton.setAttribute('aria-expanded', 'false');
          const icon = mobileMenuButton.querySelector('svg');
          if (icon) {
            icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
          }
        };

        mobileMenuButton.addEventListener('click', () => {
          const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
          mobileMenuButton.setAttribute('aria-expanded', isExpanded ? 'false' : 'true');
          mobileMenu.classList.toggle('hidden');

          // Change icon
          const icon = mobileMenuButton.querySelector('svg');
          if (icon) {
            if (isExpanded) {
              icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
            } else {
              icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />';
            }
          }
        });

        // Close menu when clicking outside
        document.addEventListener('click', (e) => {
          if (!mobileMenuButton.contains(e.target) && !mobileMenu.contains(e.target)) {
            closeMobileMenu();
          }
        });

        // Close mobile menu on link click
        mobileMenu.querySelectorAll('a').forEach((link) => {
          link.addEventListener('click', () => closeMobileMenu());
        });

        // Close with Escape for keyboard users
        document.addEventListener('keydown', (event) => {
          if (event.key === 'Escape' && mobileMenuButton.getAttribute('aria-expanded') === 'true') {
            closeMobileMenu();
          }
        });
      }
    });

    // Scroll reveal animations handled centrally by `MicroInteractions.astro` (IntersectionObserver).
  </script>
</body>
</html>
