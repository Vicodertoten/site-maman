---
// MainLayout.astro - Layout principal épuré pour Gastronomade
import '../styles/global.css';
import NewsletterSignup from '../components/NewsletterSignup.astro';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content="Gastronomade - Manger Vrai - Muriel Cruysmans à Wavre" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  <title>{title}</title>
</head>
<body class="bg-mv-cream font-sans text-mv-forest min-h-screen">
  <!-- Bandeau permanent -->
  <header class="bg-mv-forest text-mv-cream py-2 text-center text-sm font-medium">
    Muriel Cruysmans | Manger Vrai | Gastronomade
  </header>

  <!-- Navigation -->
  <nav class="bg-white shadow-sm border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex justify-between items-center h-16">
        <div class="flex-shrink-0">
          <a href="/" class="text-2xl font-serif font-bold text-mv-forest hover:text-mv-leaf hover:scale-105 transition-all duration-300 transform">
            Muriel Cruysmans
          </a>
        </div>
        <div class="hidden md:block">
          <div class="ml-10 flex items-baseline space-x-8">
            <a href="/" class="text-mv-forest hover:text-mv-leaf hover:underline hover:scale-105 px-3 py-2 text-sm font-medium transition-all duration-300 transform">Gastronomade</a>
            <a href="/thermomix" class="text-mv-forest hover:text-mv-leaf hover:underline hover:scale-105 px-3 py-2 text-sm font-medium transition-all duration-300 transform">Thermomix</a>
            <a href="/about" class="text-mv-forest hover:text-mv-leaf hover:underline hover:scale-105 px-3 py-2 text-sm font-medium transition-all duration-300 transform">Cours & Coaching</a>
            <a href="/recettes" class="text-mv-forest hover:text-mv-leaf hover:underline hover:scale-105 px-3 py-2 text-sm font-medium transition-all duration-300 transform">Recettes</a>
            <a href="/contact" class="text-mv-forest hover:text-mv-leaf hover:underline hover:scale-105 px-3 py-2 text-sm font-medium transition-all duration-300 transform">Contact</a>
          </div>
        </div>
        <!-- Mobile menu button -->
        <div class="md:hidden">
          <button type="button" class="text-mv-forest hover:text-mv-leaf hover:scale-110 p-2 transition-all duration-300 transform rounded-lg hover:bg-mv-cream" aria-label="Menu">
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main content -->
  <main class="flex-1">
    <slot />
  </main>

  <!-- Newsletter Signup -->
  <NewsletterSignup />

  <!-- Footer -->
  <footer class="bg-mv-cream border-t border-mv-leaf/20 mt-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-4">
      <div class="flex justify-between items-center">
        <div class="text-mv-forest text-sm">
          <p>&copy; 2026 Gastronomade - Manger Vrai. Tous droits réservés.</p>
        </div>
        <div class="text-mv-forest text-sm text-right">
          <div class="flex items-center justify-end space-x-6">
            <a href="tel:+32478444065" class="hover:text-mv-leaf transition-colors">
              +32 478 44 40 65
            </a>
            <a href="mailto:muriel.cruysmans@gmail.com" class="hover:text-mv-leaf transition-colors">
              muriel.cruysmans@gmail.com
            </a>
            <a href="https://www.instagram.com/gastronomade_muriel" target="_blank" rel="noopener noreferrer" class="text-mv-forest hover:text-mv-coral transition-colors">
              <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </footer>
</body>
</html>