---
// MainLayout.astro - Layout principal épuré pour Gastronomade
import '../styles/global.css';
import NewsletterSignup from '../components/NewsletterSignup.astro';
import { getContactData } from '../lib/sanity';

const SITE_URL = import.meta.env.PUBLIC_SITE_URL || 'https://gastronomade.netlify.app';

const contactData = await getContactData();

const {
  title,
  description = "Gastronomade - Manger Vrai - Muriel Cruysmans à Wavre",
  image = "/images/logo-manger-vrai.png",
  url = Astro.url.pathname
} = Astro.props;

const canonicalUrl = `${SITE_URL}${url}`;
---

<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8" />
  <meta name="description" content={description} />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="icon" type="image/png" href="/images/logo-manger-vrai.png" />
  <link rel="apple-touch-icon" href="/images/logo-manger-vrai.png" />
  <link rel="canonical" href={canonicalUrl} />
  <title>{title}</title>

  <!-- Open Graph -->
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={`${SITE_URL}${image}`} />
  <meta property="og:url" content={canonicalUrl} />
  <meta property="og:type" content="website" />
  <meta property="og:locale" content="fr_FR" />
  <meta property="og:site_name" content="Gastronomade" />

  <!-- Twitter Card -->
  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={`${SITE_URL}${image}`} />

  <!-- Structured Data (JSON-LD) -->
  <script type="application/ld+json" set:html={
    JSON.stringify({
      "@context": "https://schema.org",
      "@type": "LocalBusiness",
      "name": "Gastronomade",
      "description": "Manger Vrai avec Muriel Cruysmans - Cuisine saine et gourmande à Wavre",
      "url": SITE_URL,
      "telephone": contactData?.contactInfo?.phone || "+32 478 44 40 65",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Adresse de Wavre",
        "addressLocality": "Wavre",
        "addressRegion": "Brabant wallon",
        "postalCode": "1300",
        "addressCountry": "BE"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 50.717,
        "longitude": 4.611
      },
      "openingHours": "Mo-Fr 09:00-18:00",
      "priceRange": "$$",
      "servesCuisine": ["Healthy", "French", "Belgian"],
      "founder": {
        "@type": "Person",
        "name": "Muriel Cruysmans"
      }
    })
  } />
</head>
<body class="bg-mv-cream font-sans text-mv-forest min-h-screen">
  <!-- Navigation -->
  <nav class="bg-mv-cream-80 backdrop-blur-md border-b border-mv-leaf-30 sticky top-0 z-50 shadow-lg shadow-mv-forest-5">
    <div class="mv-container">
      <div class="flex justify-between items-center h-16">
        <div class="flex-shrink-0">
          <a href="/" class="text-xl md:text-2xl font-serif font-bold text-mv-forest hover:text-mv-leaf transition-colors duration-300 focus:outline-none focus:ring-2 focus:ring-mv-leaf focus:ring-offset-2 rounded">
            Muriel Cruysmans
          </a>
        </div>

        <!-- Desktop Navigation -->
        <div class="hidden md:block">
          <div class="ml-10 flex items-baseline space-x-1 lg:space-x-8">
            <a href="/" class="text-mv-forest hover:text-mv-leaf hover:bg-mv-leaf-10 px-3 py-2 text-sm font-medium transition-all duration-300 rounded focus:outline-none focus:ring-2 focus:ring-mv-leaf focus:ring-offset-2">Gastronomade</a>
            <a href="/thermomix" class="text-mv-forest hover:text-mv-leaf hover:bg-mv-leaf-10 px-3 py-2 text-sm font-medium transition-all duration-300 rounded focus:outline-none focus:ring-2 focus:ring-mv-leaf focus:ring-offset-2">Thermomix</a>
            <a href="/about" class="text-mv-forest hover:text-mv-leaf hover:bg-mv-leaf-10 px-3 py-2 text-sm font-medium transition-all duration-300 rounded focus:outline-none focus:ring-2 focus:ring-mv-leaf focus:ring-offset-2">Cours & Coaching</a>
            <a href="/recettes" class="text-mv-forest hover:text-mv-leaf hover:bg-mv-leaf-10 px-3 py-2 text-sm font-medium transition-all duration-300 rounded focus:outline-none focus:ring-2 focus:ring-mv-leaf focus:ring-offset-2">Recettes</a>
            <a href="/contact" class="text-mv-forest hover:text-mv-leaf hover:bg-mv-leaf-10 px-3 py-2 text-sm font-medium transition-all duration-300 rounded focus:outline-none focus:ring-2 focus:ring-mv-leaf focus:ring-offset-2">Contact</a>
          </div>
        </div>

        <!-- Mobile menu button -->
        <div class="md:hidden">
          <button
            type="button"
            id="mobile-menu-button"
            class="text-mv-forest hover:text-mv-leaf hover:bg-mv-leaf-10 p-2 transition-all duration-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-mv-leaf focus:ring-offset-2"
            aria-label="Ouvrir le menu"
            aria-expanded="false"
          >
            <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>

      <!-- Mobile Navigation Menu -->
      <div id="mobile-menu" class="hidden md:hidden pb-4">
        <div class="px-2 pt-2 pb-3 space-y-1 bg-mv-cream-90 backdrop-blur-lg rounded-lg border border-mv-leaf-30 mt-2 shadow-xl shadow-mv-forest-10">
          <a href="/" class="text-mv-forest hover:text-mv-leaf hover:bg-mv-leaf-10 block px-3 py-2 text-base font-medium transition-all duration-300 rounded focus:outline-none focus:ring-2 focus:ring-mv-leaf focus:ring-offset-2">Gastronomade</a>
          <a href="/thermomix" class="text-mv-forest hover:text-mv-leaf hover:bg-mv-leaf-10 block px-3 py-2 text-base font-medium transition-all duration-300 rounded focus:outline-none focus:ring-2 focus:ring-mv-leaf focus:ring-offset-2">Thermomix</a>
          <a href="/about" class="text-mv-forest hover:text-mv-leaf hover:bg-mv-leaf-10 block px-3 py-2 text-base font-medium transition-all duration-300 rounded focus:outline-none focus:ring-2 focus:ring-mv-leaf focus:ring-offset-2">Cours & Coaching</a>
          <a href="/recettes" class="text-mv-forest hover:text-mv-leaf hover:bg-mv-leaf-10 block px-3 py-2 text-base font-medium transition-all duration-300 rounded focus:outline-none focus:ring-2 focus:ring-mv-leaf focus:ring-offset-2">Recettes</a>
          <a href="/contact" class="text-mv-forest hover:text-mv-leaf hover:bg-mv-leaf-10 block px-3 py-2 text-base font-medium transition-all duration-300 rounded focus:outline-none focus:ring-2 focus:ring-mv-leaf focus:ring-offset-2">Contact</a>
        </div>
      </div>
    </div>
  </nav>

  <!-- Main content -->
  <main class="flex-1 min-h-screen">
    <slot />
  </main>

  <!-- Newsletter Signup -->
  <NewsletterSignup />

  <!-- Footer -->
  <footer class="bg-mv-cream border-t border-mv-leaf-20 mt-10">
    <div class="mv-container py-5 md:py-6">
      <div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between">
        <!-- Identité -->
        <div class="flex items-center gap-4">
          <div>
            <h3 class="text-base sm:text-lg font-serif font-bold text-mv-forest">Gastronomade</h3>
            <p class="text-mv-forest-70 text-sm">
              Manger Vrai avec Muriel Cruysmans · Wavre
            </p>
          </div>
        </div>

        <!-- Contact -->
        <div class="flex flex-col sm:flex-row sm:items-center gap-3 text-sm">
          <a href={`tel:${contactData?.contactInfo?.phone?.replace(/\s+/g, '') || '+32478444065'}`} class="flex items-center text-mv-forest-80 hover:text-mv-leaf transition-colors">
            <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            {contactData?.contactInfo?.phone || '+32 478 44 40 65'}
          </a>
          <a href={`mailto:${contactData?.contactInfo?.email || 'muriel.cruysmans@gmail.com'}`} class="flex items-center text-mv-forest-80 hover:text-mv-leaf transition-colors">
            <svg class="w-4 h-4 mr-2 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            {contactData?.contactInfo?.email || 'muriel.cruysmans@gmail.com'}
          </a>
        </div>

        <!-- Réseaux -->
        <div class="flex items-center gap-4 text-sm">
          <a href="https://www.instagram.com/manger_vrai" target="_blank" rel="noopener noreferrer" class="flex items-center text-mv-forest-80 hover:text-mv-leaf transition-colors">
            <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
            @manger_vrai
          </a>
          <a href="https://www.youtube.com/@murielcruysmans5423/shorts" target="_blank" rel="noopener noreferrer" class="flex items-center text-mv-forest-80 hover:text-mv-leaf transition-colors">
            <svg class="w-5 h-5 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
              <path d="M23.498 6.186a2.999 2.999 0 0 0-2.112-2.112C19.505 3.5 12 3.5 12 3.5s-7.505 0-9.386.574A2.999 2.999 0 0 0 .502 6.186C0 8.067 0 12 0 12s0 3.933.502 5.814a2.999 2.999 0 0 0 2.112 2.112C4.495 20.5 12 20.5 12 20.5s7.505 0 9.386-.574a2.999 2.999 0 0 0 2.112-2.112C24 15.933 24 12 24 12s0-3.933-.502-5.814zM9.75 15.5v-7l6 3.5-6 3.5z"/>
            </svg>
            YouTube
          </a>
        </div>
      </div>

      <!-- Copyright -->
      <div class="border-t border-mv-leaf-20 mt-6 pt-4 text-center">
        <p class="text-mv-forest-60 text-sm">
          &copy; 2026 Gastronomade - Manger Vrai. Tous droits réservés.
        </p>
      </div>
    </div>
  </footer>

  <script>
    // Menu mobile functionality
    document.addEventListener('DOMContentLoaded', () => {
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');

      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
          const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
          mobileMenuButton.setAttribute('aria-expanded', !isExpanded);
          mobileMenu.classList.toggle('hidden');

          // Change icon
          const icon = mobileMenuButton.querySelector('svg');
          if (icon) {
            if (isExpanded) {
              icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
            } else {
              icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />';
            }
          }
        });

        // Close menu when clicking outside
        document.addEventListener('click', (e) => {
          if (!mobileMenuButton.contains(e.target) && !mobileMenu.contains(e.target)) {
            mobileMenu.classList.add('hidden');
            mobileMenuButton.setAttribute('aria-expanded', 'false');
            const icon = mobileMenuButton.querySelector('svg');
            if (icon) {
              icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
            }
          }
        });
      }
    });

    // Scroll reveal animations handled centrally by `MicroInteractions.astro` (IntersectionObserver + MutationObserver).
  </script>
</body>
</html>
