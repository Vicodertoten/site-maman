---
import MainLayout from '../layouts/MainLayout.astro';
import Section from '../components/Section.astro';
import PageHero from '../components/PageHero.astro';
import { sanityClient, queries, type ThermomixData } from '../lib/sanity';
import { getEmbedUrl } from '../lib/utils';

// Récupérer les données Thermomix depuis Sanity
const thermomixData = await sanityClient.fetch<ThermomixData>(queries.thermomix);

const showHero = thermomixData?.showHero !== false;
const showPromo = thermomixData?.showPromo !== false;
const showBenefits = thermomixData?.showBenefits !== false;
const showDemo = thermomixData?.showDemo !== false;

const heroHighlights = (thermomixData?.heroHighlights && thermomixData.heroHighlights.length > 0)
  ? thermomixData.heroHighlights
  : [
      { label: '1', title: 'Guidage clair', text: 'Écran pas à pas pour gagner du temps.', isVisible: true },
      { label: '2', title: 'Cuisson précise', text: 'Température maîtrisée sans surveillance.', isVisible: true },
      { label: '3', title: 'Vaisselle réduite', text: 'Un seul appareil pour tout faire.', isVisible: true }
    ];

const fallbackHeroLead = 'Le Thermomix pèse, hache, mixe, cuit et mijote dans un seul bol. Il guide chaque étape grâce à ses recettes intégrées : vous gardez la main, il vous simplifie la vie.';
const pageDescription = (thermomixData?.heroLead || fallbackHeroLead).trim();
const pageImage = thermomixData?.featuredImageUrl
  ? `${thermomixData.featuredImageUrl}?w=1200&h=630&fit=crop&auto=format`
  : undefined;

const benefits = (thermomixData?.benefits && thermomixData.benefits.length > 0)
  ? thermomixData.benefits
  : [
      { title: 'Accompagnement personnalisé', text: 'Installation, prise en main et premiers menus.', isVisible: true },
      { title: 'Recettes adaptées', text: 'Des idées simples pour votre rythme.', isVisible: true },
      { title: 'Suivi continu', text: 'On reste en contact après l’achat.', isVisible: true },
      { title: 'Premiers pas réussis', text: 'Astuces pour gagner du temps au quotidien.', isVisible: true }
    ];

const demoDetails = (thermomixData?.demoDetails && thermomixData.demoDetails.length > 0)
  ? thermomixData.demoDetails
  : [
      { label: 'À prévoir', text: 'Durée : 60 à 90 min • Groupe réduit', isVisible: true },
      { label: 'Où', text: 'Chez moi ou à convenir selon disponibilité.', isVisible: true }
    ];

const defaultFaqs = [
  {
    question: "Qu'est-ce qu'un Thermomix exactement ?",
    answer: "Un robot de cuisine multifonction qui pèse, hache, mixe, cuit et mijote. Il est guidé par des recettes intégrées qui vous accompagnent pas à pas."
  },
  {
    question: "Combien ça coûte ?",
    answer: "Le prix varie selon le modèle. Contactez-moi pour la tarification actuelle et les offres en cours."
  },
  {
    question: "Comment ça marche ?",
    answer: "Elle scannez la recette, les ingrédients se placent, et le Thermomix guide chaque étape. Simple et sûr."
  }
];

const faqs = (thermomixData?.faqs && thermomixData.faqs.length > 0)
  ? thermomixData.faqs.filter((item) => item?.question && item?.answer && item?.isVisible !== false)
  : defaultFaqs;
---

<MainLayout
  title="Thermomix - Gastronomade"
  description={pageDescription}
  image={pageImage}
>
  {showHero && (
    <PageHero
      hero={thermomixData?.hero}
      updatedAtIso={thermomixData?._updatedAt}
      defaultVariant="split"
      defaultKicker={thermomixData?.heroKicker || 'Thermomix'}
      defaultTitle={thermomixData?.heroTitle || 'Le robot qui cuisine avec vous, pas à votre place.'}
      defaultSubtitle={thermomixData?.heroLead || fallbackHeroLead}
      defaultCtaCount={2}
      defaultPrimaryCtaLabel={thermomixData?.heroPrimaryCtaLabel || 'Voir les vidéos YouTube'}
      defaultPrimaryCtaUrl={thermomixData?.heroPrimaryCtaUrl || 'https://www.youtube.com/@murielcruysmans5423/shorts'}
      defaultSecondaryCtaLabel={thermomixData?.heroSecondaryCtaLabel || 'Suivre @manger_vrai'}
      defaultSecondaryCtaUrl={thermomixData?.heroSecondaryCtaUrl || 'https://www.instagram.com/manger_vrai/'}
      sectionClass="bg-white"
      mediaImageUrl={thermomixData?.featuredImageUrl}
      mediaImageAlt={thermomixData?.heroTitle || thermomixData?.heroKicker || 'Thermomix'}
    >
      <div slot="afterSubtitle" class="grid grid-cols-1 sm:grid-cols-3 gap-4">
        {heroHighlights.filter((item) => item?.isVisible !== false).map((item, index) => (
          <div class="rounded-2xl bg-white shadow-sm border border-mv-leaf-20 p-4" key={index}>
            <p class="text-xs uppercase tracking-[0.18em] text-mv-forest-60 mb-2">{item.label}</p>
            <h3 class="text-sm font-semibold text-mv-forest">{item.title}</h3>
            <p class="text-sm text-mv-forest-70">{item.text}</p>
          </div>
        ))}
      </div>
    </PageHero>
  )}

  {thermomixData?.videoUrl && (
    <Section class="bg-white pt-0">
      <div class="max-w-4xl" slot="content">
        <div class="rounded-3xl overflow-hidden shadow-lg border border-mv-leaf-20 bg-white">
          <div class="aspect-video bg-mv-cream">
            <iframe
              src={getEmbedUrl(thermomixData.videoUrl)}
              class="w-full h-full"
              frameborder="0"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
              title="Vidéo de présentation Thermomix"
            ></iframe>
          </div>
          <div class="p-4 sm:p-5">
            <p class="text-sm text-mv-forest-70">
              {thermomixData?.heroVideoCaption || 'Une présentation rapide pour comprendre l’essentiel avant une démo.'}
            </p>
          </div>
        </div>
      </div>
    </Section>
  )}

  {showDemo && (
    <Section class="bg-gradient-to-b from-white to-mv-cream/60">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-center" slot="content">
        <div class="lg:col-span-7 space-y-5">
          <h2 class="mv-section-title">
            {thermomixData?.demoTitle || 'Démo en direct chaque mardi soir'}
          </h2>
          <p class="mv-lead">
            {thermomixData?.demoText || 'Venez découvrir le Thermomix en action, poser vos questions et goûter le résultat. Démo prévue tous les mardis soir — et si ce créneau ne vous convient pas, contactez-moi pour trouver un autre moment.'}
          </p>
          <div class="flex flex-wrap gap-3">
            <a href={thermomixData?.demoPrimaryCtaLink || '/contact'} class="mv-btn mv-btn-primary bg-mv-forest text-mv-cream hover:bg-mv-leaf transition-all duration-300">
              {thermomixData?.demoPrimaryCtaLabel || 'Réserver une démo'}
            </a>
          </div>
        </div>
        <div class="lg:col-span-5">
          <div class="rounded-3xl border border-mv-leaf-20 bg-white p-6 sm:p-8 shadow-sm space-y-4">
            {demoDetails.filter((item) => item?.isVisible !== false).map((item, index) => (
              <>
                <div>
                  <p class="mv-kicker mb-2">{item.label}</p>
                  <p class="text-sm text-mv-forest-80">{item.text}</p>
                </div>
                {index < demoDetails.length - 1 && <div class="h-px bg-mv-leaf-20"></div>}
              </>
            ))}
          </div>
        </div>
      </div>
    </Section>
  )}

  {(showPromo || showBenefits) && (
    <Section class="bg-white">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8 lg:gap-12 items-center" slot="content">
        {showPromo && (
          <div class="lg:col-span-5">
            <div class="rounded-3xl border border-mv-coral-20 bg-mv-coral-20 p-6 sm:p-8 shadow-sm">
              {thermomixData?.featuredImageUrl && (
                <div class="mb-5 overflow-hidden rounded-2xl border border-mv-coral-20 bg-white">
                  <img
                    src={`${thermomixData.featuredImageUrl}?w=900&h=600&fit=crop&auto=format`}
                    alt="Promo Thermomix"
                    class="h-48 w-full object-cover sm:h-56"
                    loading="lazy"
                    decoding="async"
                    width="900"
                    height="600"
                    sizes="(min-width: 1024px) 40vw, (min-width: 640px) 60vw, 100vw"
                  />
                </div>
              )}
              <p class="mv-kicker mb-3">{thermomixData?.promoKicker || 'Promo du mois'}</p>
              <h2 class="mv-section-title mb-3">
                {thermomixData?.promoTitle || 'Offres & avantages en cours'}
              </h2>
              <p class="mv-lead">
                {thermomixData?.monthlyText
                  ? thermomixData.monthlyText
                  : "Chaque mois, des offres et des surprises à l’achat de votre Thermomix."}
              </p>
            </div>
          </div>
        )}
        {showBenefits && (
          <div class="lg:col-span-7 space-y-4 sm:space-y-5">
            <h2 class="mv-section-title">{thermomixData?.benefitsTitle || 'Pourquoi en profiter maintenant'}</h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
              {benefits.filter((item) => item?.isVisible !== false).map((item, index) => (
                <div class="rounded-2xl border border-mv-leaf-20 p-4" key={index}>
                  <p class="text-sm font-semibold text-mv-forest">{item.title}</p>
                  <p class="text-sm text-mv-forest-70">{item.text}</p>
                </div>
              ))}
            </div>
            <a href={thermomixData?.benefitsCtaLink || "/contact"} class="inline-flex items-center gap-2 text-mv-forest font-semibold hover:text-mv-leaf transition-colors">
              {thermomixData?.benefitsCtaLabel || 'Recevoir le détail de la promo →'}
            </a>
          </div>
        )}
      </div>
    </Section>
  )}

  {faqs.length > 0 && (
    <Section class="bg-white" containerClass="max-w-4xl">
      <div class="max-w-3xl" slot="content">
        <h2 class="mv-section-title">FAQ</h2>
      </div>
      <div class="mt-6 space-y-3" slot="content">
        {faqs.map((faq, index) => (
          <details class="mv-card p-4 sm:p-5" key={index}>
            <summary class="cursor-pointer text-sm font-semibold text-mv-forest">{faq.question}</summary>
            <p class="mt-3 text-sm text-mv-forest-70">{faq.answer}</p>
          </details>
        ))}
      </div>
    </Section>
  )}
</MainLayout>
