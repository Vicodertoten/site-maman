---
import MainLayout from '../layouts/MainLayout.astro';
import { sanityClient, queries, type ContactData } from '../lib/sanity';

// Récupérer les données depuis Sanity
const contactData = await sanityClient.fetch<ContactData>(queries.contact);
---

<MainLayout title={contactData?.title || "Contact - Gastronomade"}>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-mv-cream to-white py-12 sm:py-16 lg:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-mv-forest mb-3 sm:mb-4 leading-tight">
        {contactData?.heroTitle || "Contact"}
      </h1>
      <p class="text-lg sm:text-xl md:text-2xl text-mv-forest-80 mb-4 sm:mb-6 max-w-3xl mx-auto leading-relaxed">
        {contactData?.heroSubtitle || "Entrons en contact pour votre projet gastronomique"}
      </p>
    </div>
  </section>

  <!-- Contact Methods Section -->
  <section class="py-12 sm:py-16 lg:py-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-serif font-bold text-mv-forest mb-4 leading-tight">
          Contactez-moi
        </h2>
        <p class="text-lg text-mv-forest-70 max-w-2xl mx-auto">
          Choisissez le moyen qui vous convient le mieux pour me joindre
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8">
        <!-- Téléphone -->
        <div class="bg-mv-cream rounded-xl p-6 text-center hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-mv-leaf rounded-full mb-4">
            <svg class="h-8 w-8 text-mv-cream" fill="currentColor" viewBox="0 0 24 24">
              <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-mv-forest mb-2">Téléphone</h3>
          <p class="text-mv-forest-80 mb-4">{contactData?.contactInfo?.phone || "+32 478 44 40 65"}</p>
          <a href="tel:+32478444065" class="inline-block bg-mv-forest text-mv-cream px-4 py-2 rounded-lg font-medium hover:bg-mv-leaf hover:shadow-md transition-all duration-300 hover:scale-105">
            Appeler maintenant
          </a>
        </div>

        <!-- Email -->
        <div class="bg-mv-cream rounded-xl p-6 text-center hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-mv-leaf rounded-full mb-4">
            <svg class="h-8 w-8 text-mv-cream" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-mv-forest mb-2">Email</h3>
          <p class="text-mv-forest-80 mb-4">muriel.cruysmans@gmail.com</p>
          <a href="mailto:muriel.cruysmans@gmail.com" class="inline-block bg-mv-forest text-mv-cream px-4 py-2 rounded-lg font-medium hover:bg-mv-leaf hover:shadow-md transition-all duration-300 hover:scale-105">
            Envoyer un email
          </a>
        </div>

        <!-- Instagram -->
        <div class="bg-mv-cream rounded-xl p-6 text-center hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-mv-leaf rounded-full mb-4">
            <svg class="h-8 w-8 text-mv-cream" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-mv-forest mb-2">Instagram</h3>
          <p class="text-mv-forest-80 mb-4">@gastronomade_muriel</p>
          <a href="https://www.instagram.com/gastronomade_muriel" target="_blank" rel="noopener noreferrer" class="inline-block bg-mv-forest text-mv-cream px-4 py-2 rounded-lg font-medium hover:bg-mv-leaf hover:shadow-md transition-all duration-300 hover:scale-105">
            Suivez-moi
          </a>
        </div>

        <!-- Localisation -->
        <div class="bg-mv-cream rounded-xl p-6 text-center hover:shadow-lg transition-all duration-300 hover:scale-105">
          <div class="inline-flex items-center justify-center w-16 h-16 bg-mv-leaf rounded-full mb-4">
            <svg class="h-8 w-8 text-mv-cream" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
            </svg>
          </div>
          <h3 class="font-semibold text-mv-forest mb-2">Localisation</h3>
          <p class="text-mv-forest-80 mb-4 whitespace-pre-line text-sm">{contactData?.contactInfo?.address || "190 chemin de Vieusart\n1300 Wavre"}</p>
          <a href="https://www.google.com/maps/dir/?api=1&destination=190+chemin+de+Vieusart+1300+Wavre" target="_blank" rel="noopener noreferrer" class="inline-block bg-mv-forest text-mv-cream px-4 py-2 rounded-lg font-medium hover:bg-mv-leaf hover:shadow-md transition-all duration-300 hover:scale-105">
            Voir sur la carte
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="pb-12 sm:pb-16 lg:pb-20 bg-mv-cream">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-lg p-6 sm:p-8 shadow-sm">
        <h3 class="text-xl sm:text-2xl font-serif font-bold text-mv-forest mb-3 sm:mb-4 text-center leading-tight">
          Localisation
        </h3>
        <div class="aspect-video bg-gray-200 rounded-lg overflow-hidden">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2538.123456789012!2d4.6075!3d50.7172!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c17d1b1b1b1b1b%3A0x1234567890abcdef!2s190%20chemin%20de%20Vieusart%2C%201300%20Wavre!5e0!3m2!1sfr!2sbe!4v1703123456789!5m2!1sfr!2sbe"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Carte de localisation - Muriel Cruysmans">
          </iframe>
        </div>
        <div class="mt-4 text-center">
          <p class="text-mv-forest-80">
            <strong>Adresse :</strong> 190 chemin de Vieusart, 1300 Wavre, Belgique
          </p>
          <a
            href="https://www.google.com/maps/dir/?api=1&destination=190+chemin+de+Vieusart+1300+Wavre"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center mt-2 text-mv-forest hover:text-mv-forest-doux transition-colors"
          >
            <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
            </svg>
            Obtenir l'itinéraire
          </a>
        </div>
      </div>
    </div>
  </section>