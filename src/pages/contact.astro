---
import MainLayout from '../layouts/MainLayout.astro';
import { sanityClient, queries, type ContactData } from '../lib/sanity';

// Récupérer les données depuis Sanity
const contactData = await sanityClient.fetch<ContactData>(queries.contact);
---

<MainLayout title={contactData?.title || "Contact - Gastronomade"}>


  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-mv-cream to-white py-12 sm:py-16 lg:py-20">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-serif font-bold text-mv-forest mb-3 sm:mb-4 leading-tight">
        {contactData?.heroTitle || "Contact"}
      </h1>
      <p class="text-lg sm:text-xl md:text-2xl text-mv-forest/80 mb-4 sm:mb-6 max-w-3xl mx-auto leading-relaxed">
        {contactData?.heroSubtitle || "Entrons en contact pour votre projet gastronomique"}
      </p>
    </div>
  </section>

  <!-- Contact Info Section -->
  <section class="pb-12 sm:pb-16 lg:pb-20 bg-white">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 sm:gap-12 lg:gap-16">
        <!-- Contact Information -->
        <div class="space-y-8">
          <div>
            <h2 class="text-2xl sm:text-3xl font-serif font-bold text-mv-forest mb-3 sm:mb-4 leading-tight">
              Informations de contact
            </h2>
            <div class="space-y-6">
              <div class="flex items-start">
                <svg class="h-5 sm:h-6 w-5 sm:w-6 text-mv-leaf mr-3 sm:mr-4 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                </svg>
                <div>
                  <h3 class="font-semibold text-mv-forest mb-1 text-sm sm:text-base">Adresse</h3>
                  <p class="text-mv-forest/80 whitespace-pre-line text-sm sm:text-base leading-relaxed">
                    {contactData?.contactInfo?.address || "190 chemin de Vieusart\n1300 Wavre"}
                  </p>
                </div>
              </div>

              <div class="flex items-start">
                <svg class="h-6 w-6 text-mv-leaf mr-4 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1-1 1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                </svg>
                <div>
                  <h3 class="font-semibold text-mv-forest mb-1">Téléphone</h3>
                  <p class="text-mv-forest/90">
                    {contactData?.contactInfo?.phone || "+32 478 44 40 65"}
                  </p>
                </div>
              </div>

              <div class="flex items-start">
                <svg class="h-6 w-6 text-mv-leaf mr-4 mt-1 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                </svg>
                <div>
                  <h3 class="font-semibold text-mv-forest mb-1">Email</h3>
                  <p class="text-mv-forest/90">muriel.cruysmans@gmail.com</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Quick Actions -->
          <div class="bg-mv-cream rounded-lg p-4 sm:p-6">
            <h3 class="font-semibold text-mv-forest mb-3 sm:mb-4 text-sm sm:text-base">Actions rapides</h3>
            <div class="space-y-2 sm:space-y-3">
              <a href="tel:+32478444065" class="flex items-center text-mv-forest/80 hover:text-mv-leaf transition-colors duration-300 text-sm sm:text-base">
                <svg class="h-4 sm:h-5 w-4 sm:w-5 mr-2 sm:mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z"/>
                </svg>
                Appeler maintenant
              </a>
              <a href="mailto:muriel.cruysmans@gmail.com" class="flex items-center text-mv-forest/80 hover:text-mv-leaf transition-colors duration-300 text-sm sm:text-base">
                <svg class="h-4 sm:h-5 w-4 sm:w-5 mr-2 sm:mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
                </svg>
                Envoyer un email
              </a>
              <a href="https://www.instagram.com/gastronomade_muriel" target="_blank" rel="noopener noreferrer" class="flex items-center text-mv-forest/80 hover:text-mv-leaf transition-colors duration-300 text-sm sm:text-base">
                <svg class="h-4 sm:h-5 w-4 sm:w-5 mr-2 sm:mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
                Suivez-moi sur Instagram
              </a>
            </div>
          </div>
        </div>

        <!-- Contact Form -->
        <div class="bg-gray-50 rounded-lg p-6 sm:p-8">
          <h3 class="text-xl sm:text-2xl font-serif font-bold text-mv-forest mb-3 sm:mb-4 leading-tight">
            Envoyez-moi un message
          </h3>
          <form id="contactForm" class="space-y-6">
            <div>
              <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                Nom complet *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-mv-leaf focus:border-transparent transition-colors"
                placeholder="Votre nom"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 mb-2">
                Email *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-mv-leaf focus:border-transparent transition-colors"
                placeholder="votre.email@exemple.com"
              />
            </div>

            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 mb-2">
                Téléphone
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-mv-leaf focus:border-transparent transition-colors"
                placeholder="+32 47X XX XX XX"
              />
            </div>

            <div>
              <label for="subject" class="block text-sm font-medium text-gray-700 mb-2">
                Sujet *
              </label>
              <select
                id="subject"
                name="subject"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-mv-leaf focus:border-transparent transition-colors"
              >
                <option value="">Choisissez un sujet</option>
                <option value="cours-individuel">Cours de cuisine individuel</option>
                <option value="atelier-groupe">Atelier en groupe</option>
                <option value="coaching">Coaching personnalisé</option>
                <option value="thermomix">Formation Thermomix</option>
                <option value="autre">Autre demande</option>
              </select>
            </div>

            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 mb-2">
                Message *
              </label>
              <textarea
                id="message"
                name="message"
                rows="5"
                required
                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-mv-leaf focus:border-transparent transition-colors resize-vertical"
                placeholder="Décrivez votre demande, vos disponibilités, vos préférences culinaires..."
              ></textarea>
            </div>

            <div class="flex items-start">
              <input
                type="checkbox"
                id="privacy"
                name="privacy"
                required
                class="mt-1 h-4 w-4 text-mv-forest focus:ring-mv-leaf border-gray-300 rounded"
              />
              <label for="privacy" class="ml-2 text-sm text-gray-600">
                J'accepte que mes données soient utilisées pour répondre à ma demande. *
              </label>
            </div>

            <button
              type="submit"
              id="submitBtn"
              class="w-full bg-mv-forest text-mv-cream py-3 px-6 rounded-lg font-semibold hover:bg-mv-leaf hover:scale-105 transition-all duration-300 transform shadow-md hover:shadow-lg disabled:opacity-50 disabled:cursor-not-allowed"
            >
              <span id="btnText">Envoyer le message</span>
              <svg id="btnSpinner" class="hidden animate-spin h-5 w-5 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
            </button>
          </form>

          <div id="successMessage" class="hidden mt-6 p-4 bg-green-50 border border-green-200 rounded-lg">
            <div class="flex">
              <svg class="h-5 w-5 text-green-400 mr-3" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
              <div>
                <h4 class="text-green-800 font-semibold">Message envoyé !</h4>
                <p class="text-green-700 text-sm">Merci pour votre message. Je vous répondrai dans les plus brefs délais.</p>
              </div>
            </div>
          </div>

          <div id="errorMessage" class="hidden mt-6 p-4 bg-red-50 border border-red-200 rounded-lg">
            <div class="flex">
              <svg class="h-5 w-5 text-red-400 mr-3" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
              </svg>
              <div>
                <h4 class="text-red-800 font-semibold">Erreur d'envoi</h4>
                <p class="text-red-700 text-sm">Une erreur s'est produite. Veuillez réessayer ou me contacter directement.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map Section -->
  <section class="pb-12 sm:pb-16 lg:pb-20 bg-gray-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-lg p-6 sm:p-8 shadow-sm">
        <h3 class="text-xl sm:text-2xl font-serif font-bold text-mv-forest mb-3 sm:mb-4 text-center leading-tight">
          Localisation
        </h3>
        <div class="aspect-video bg-gray-200 rounded-lg overflow-hidden">
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2538.123456789012!2d4.6075!3d50.7172!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47c17d1b1b1b1b1b%3A0x1234567890abcdef!2s190%20chemin%20de%20Vieusart%2C%201300%20Wavre!5e0!3m2!1sfr!2sbe!4v1703123456789!5m2!1sfr!2sbe"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            title="Carte de localisation - Muriel Cruysmans">
          </iframe>
        </div>
        <div class="mt-4 text-center">
          <p class="text-gray-600">
            <strong>Adresse :</strong> 190 chemin de Vieusart, 1300 Wavre, Belgique
          </p>
          <a
            href="https://www.google.com/maps/dir/?api=1&destination=190+chemin+de+Vieusart+1300+Wavre"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center mt-2 text-mv-forest hover:text-mv-forest-doux transition-colors"
          >
            <svg class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
            </svg>
            Obtenir l'itinéraire
          </a>
        </div>
      </div>
    </div>
  </section>
</MainLayout>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contactForm');
    const submitBtn = document.getElementById('submitBtn');
    const btnText = document.getElementById('btnText');
    const btnSpinner = document.getElementById('btnSpinner');
    const successMessage = document.getElementById('successMessage');
    const errorMessage = document.getElementById('errorMessage');

    // Validation en temps réel des champs
    const inputs = form.querySelectorAll('input, select, textarea');
    inputs.forEach(input => {
      input.addEventListener('blur', function() {
        validateField(this);
      });

      input.addEventListener('input', function() {
        if (this.classList.contains('border-red-500')) {
          validateField(this);
        }
      });
    });

    function validateField(field) {
      const value = field.value.trim();
      let isValid = true;
      let errorMessage = '';

      // Reset field styling
      field.classList.remove('border-red-500', 'border-green-500');
      field.classList.add('border-gray-300');

      // Validation spécifique par champ
      switch(field.name) {
        case 'name':
          if (!value) {
            isValid = false;
            errorMessage = 'Le nom est requis';
          } else if (value.length < 2) {
            isValid = false;
            errorMessage = 'Le nom doit contenir au moins 2 caractères';
          }
          break;

        case 'email':
          const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
          if (!value) {
            isValid = false;
            errorMessage = 'L\'email est requis';
          } else if (!emailRegex.test(value)) {
            isValid = false;
            errorMessage = 'Format d\'email invalide';
          }
          break;

        case 'phone':
          if (value && !/^[\+]?[0-9\s\-\(\)]{10,}$/.test(value.replace(/\s/g, ''))) {
            isValid = false;
            errorMessage = 'Format de téléphone invalide';
          }
          break;

        case 'subject':
          if (!value) {
            isValid = false;
            errorMessage = 'Veuillez choisir un sujet';
          }
          break;

        case 'message':
          if (!value) {
            isValid = false;
            errorMessage = 'Le message est requis';
          } else if (value.length < 10) {
            isValid = false;
            errorMessage = 'Le message doit contenir au moins 10 caractères';
          }
          break;
      }

      // Affichage des erreurs
      let errorElement = field.parentNode.querySelector('.field-error');
      if (!isValid) {
        field.classList.remove('border-gray-300');
        field.classList.add('border-red-500');
        if (!errorElement) {
          errorElement = document.createElement('p');
          errorElement.className = 'field-error text-red-600 text-sm mt-1';
          field.parentNode.appendChild(errorElement);
        }
        errorElement.textContent = errorMessage;
      } else {
        field.classList.remove('border-gray-300', 'border-red-500');
        field.classList.add('border-green-500');
        if (errorElement) {
          errorElement.remove();
        }
      }

      return isValid;
    }

    // Soumission du formulaire
    form.addEventListener('submit', async function(e) {
      e.preventDefault();

      // Validation de tous les champs
      let isFormValid = true;
      inputs.forEach(input => {
        if (!validateField(input)) {
          isFormValid = false;
        }
      });

      if (!isFormValid) {
        // Scroll vers le premier champ invalide
        const firstInvalid = form.querySelector('.border-red-500');
        if (firstInvalid) {
          firstInvalid.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
        return;
      }

      // Afficher le spinner
      submitBtn.disabled = true;
      btnText.classList.add('hidden');
      btnSpinner.classList.remove('hidden');

      // Masquer les messages précédents
      successMessage.classList.add('hidden');
      errorMessage.classList.add('hidden');

      try {
        // Simulation d'envoi (remplacer par vraie API plus tard)
        await new Promise(resolve => setTimeout(resolve, 2000));

        // Récupération des données du formulaire
        const formData = new FormData(form);
        const data = Object.fromEntries(formData.entries());

        console.log('Données du formulaire:', data);

        // Simulation de succès (90% de succès, 10% d'erreur pour test)
        if (Math.random() > 0.1) {
          // Succès
          successMessage.classList.remove('hidden');
          form.reset();

          // Reset des styles de validation
          inputs.forEach(input => {
            input.classList.remove('border-green-500', 'border-red-500');
            input.classList.add('border-gray-300');
            const errorElement = input.parentNode.querySelector('.field-error');
            if (errorElement) errorElement.remove();
          });
        } else {
          // Erreur simulée
          throw new Error('Erreur de réseau');
        }

      } catch (error) {
        console.error('Erreur lors de l\'envoi:', error);
        errorMessage.classList.remove('hidden');
      } finally {
        // Masquer le spinner
        submitBtn.disabled = false;
        btnText.classList.remove('hidden');
        btnSpinner.classList.add('hidden');
      }
    });

    // Amélioration de l'accessibilité
    inputs.forEach(input => {
      input.addEventListener('invalid', function(e) {
        e.preventDefault();
        validateField(this);
      });
    });
  });
</script>