---
// NewsletterSignup.astro - Composant d'inscription à la newsletter
import { getNewsletterSettingsData } from '../lib/sanity';

const newsletterSettings = await getNewsletterSettingsData();
const buttonLabel = newsletterSettings?.buttonLabel || "S'inscrire";
const errorMessage = newsletterSettings?.errorMessage || "Une erreur est survenue lors de l'inscription. Veuillez réessayer.";
---

<div id="newsletter-signup" class="mv-card p-6 my-8">
  <div class="text-center">
    <h3 class="text-xl font-serif font-bold text-mv-forest mb-2">
      {newsletterSettings?.title || 'Restez informé(e)'}
    </h3>
    <p class="text-mv-forest-80 mb-4">
      {newsletterSettings?.description || 'Abbonnez-vous à ma newsletter et recevez une recette par mois et les dernères nouvelles de mes activités.'}
    </p>

    <form id="newsletter-form" class="max-w-md mx-auto">
      <div class="flex gap-2">
        <input
          type="email"
          name="email"
          id="newsletter-email"
          placeholder={newsletterSettings?.inputPlaceholder || 'Votre adresse email'}
          class="mv-input flex-1"
          required
        />
        <button
          type="submit"
          id="newsletter-submit"
          class="mv-btn mv-btn-primary hover:bg-mv-forest hover:scale-105 transition-all duration-300 transform shadow-sm hover:shadow-md"
        >
          {buttonLabel}
        </button>
      </div>
      <p id="newsletter-message" class="text-sm mt-2 opacity-0 transition-opacity"></p>
    </form>
  </div>
</div>

<!-- Modal de remerciement -->
<div id="newsletter-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50 flex items-center justify-center p-4" role="dialog" aria-modal="true" aria-labelledby="newsletter-title" aria-describedby="newsletter-desc">
  <div class="bg-white rounded-lg shadow-xl max-w-md w-full p-6 relative" data-modal-panel tabindex="-1">
    <!-- Bouton de fermeture -->
    <button id="modal-close" class="absolute top-4 right-4 text-mv-forest-60 hover:text-mv-forest transition-colors" aria-label="Fermer la fenêtre">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Contenu du modal -->
    <div class="text-center">
      <div class="mb-4">
        <svg class="mx-auto h-12 w-12 text-mv-leaf" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>

      <h3 id="newsletter-title" class="text-xl font-serif font-bold text-mv-forest mb-2">
        {newsletterSettings?.successTitle || 'Merci pour votre inscription !'}
      </h3>

      <p id="newsletter-desc" class="text-mv-forest-80 mb-6 leading-relaxed">
        {newsletterSettings?.successText || 'Votre inscription à la newsletter a bien été enregistrée. Vous recevrez bientôt mes dernières recettes et conseils nutritionnels.'}
      </p>

      <button id="modal-ok" class="mv-btn mv-btn-primary bg-mv-leaf text-mv-cream hover:bg-mv-forest transition-colors">
        {newsletterSettings?.successButtonLabel || 'Parfait !'}
      </button>
    </div>
  </div>
</div>

<script type="module" define:vars={{ buttonLabel, errorMessage }}>
  import { trapFocus } from '../lib/focus-trap.js';
  import { showToast } from '../lib/notify.js';

  // Gestionnaire du modal de remerciement (maintenant accessible + sans alert())
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('newsletter-form');
    const submitButton = document.getElementById('newsletter-submit');
    const modal = document.getElementById('newsletter-modal');
    const modalPanel = modal?.querySelector('[data-modal-panel]');
    const modalClose = document.getElementById('modal-close');
    const modalOk = document.getElementById('modal-ok');
    let releaseTrap = null;

    // Fonction pour afficher le modal
    const showModal = () => {
      modal.classList.remove('hidden');
      modal.classList.add('flex');
      document.body.style.overflow = 'hidden'; // Empêcher le scroll
      releaseTrap = trapFocus(modalPanel, { initialFocus: modalOk, returnFocusTo: submitButton, onClose: hideModal });
    };

    // Fonction pour cacher le modal
    const hideModal = () => {
      modal.classList.add('hidden');
      modal.classList.remove('flex');
      document.body.style.overflow = ''; // Restaurer le scroll
      if (releaseTrap) {
        releaseTrap();
        releaseTrap = null;
      }
    };

    // Gestionnaires d'événements pour fermer le modal
    modalClose.addEventListener('click', hideModal);
    modalOk.addEventListener('click', hideModal);

    // Fermer le modal en cliquant en dehors
    modal.addEventListener('click', (e) => {
      if (e.target === modal) {
        hideModal();
      }
    });

    // Fermer le modal avec la touche Échap (capture géré par focus-trap too)
    document.addEventListener('keydown', (e) => {
      if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
        hideModal();
      }
    });

    // Gestionnaire de soumission du formulaire
    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Désactiver le bouton et montrer le chargement
      submitButton.disabled = true;
      submitButton.textContent = 'Inscription...';

      try {
        // Créer les données du formulaire
        const formData = new FormData(form);

        // Envoyer à la Netlify Function
        const response = await fetch('/.netlify/functions/newsletter', {
          method: 'POST',
          body: formData,
        });

        const data = await response.json();

        if (response.ok && data.success) {
          // Succès : afficher le modal et réinitialiser le formulaire
          showModal();
          form.reset();
        } else {
          // Erreur : afficher un message d'erreur accessible
          showToast(data.error || errorMessage, { type: 'error' });
        }
      } catch (error) {
        console.error('Erreur lors de l\'inscription:', error);
        showToast('Erreur de connexion. Veuillez vérifier votre connexion internet et réessayer.', { type: 'error' });
      } finally {
        // Réactiver le bouton
        submitButton.disabled = false;
        submitButton.textContent = buttonLabel;
      }
    });
  });
</script>
